{
  "kind": "collectionType",
  "collectionName": "job_applications",
  "info": {
    "singularName": "job-application",
    "pluralName": "job-applications",
    "displayName": "Job Application",
    "description": "Job application submissions from the careers form"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "job": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::job-opening.job-opening",
      "inversedBy": "applications",
      "required": true
    },
    "fullName": {
      "type": "string",
      "required": true
    },
    "phone": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true
    },
    "workHistory": {
      "type": "text",
      "required": true
    },
    "resume": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["files"]
    }
  }
}
