{
  "kind": "collectionType",
  "collectionName": "job_openings",
  "info": {
    "singularName": "job-opening",
    "pluralName": "job-openings",
    "displayName": "Job Opening",
    "description": "Job opening details for the careers apply page"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "tags": {
      "type": "component",
      "repeatable": true,
      "component": "career.job-tag",
      "required": true
    },
    "requirements": {
      "type": "component",
      "repeatable": true,
      "component": "career.requirement",
      "required": true
    },
    "location": {
      "type": "text",
      "required": true
    },
    "contactLineId": {
      "type": "text"
    },
    "contactPhone": {
      "type": "string"
    },
    "contactNote": {
      "type": "string"
    },
    "applications": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::job-application.job-application",
      "mappedBy": "job"
    }
  }
}
